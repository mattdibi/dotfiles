{
    "$schema": "https://opencode.ai/config.json",
    "share": "disabled",
    "theme": "catppuccin",
    "model": "github-copilot/claude-sonnet-4.5",
    "autoupdate": false,
    "permission": {
        "edit": "ask",
        "bash": "ask",
        "webfetch": "ask"
    },
    "mcp": {
        "git": {
            "type": "local",
            "command": ["/usr/local/bin/uvx", "mcp-server-git"]
        },
        "fetch": {
            "type": "local",
            "command": ["/usr/local/bin/uvx", "mcp-server-fetch"]
        },
        "github": {
            "type": "remote",
            "url": "https://api.githubcopilot.com/mcp/",
            "enabled": true,
            "headers": {
                "Authorization": "Bearer {file:~/.secrets/githubpat}"
            }
        },
        "atlassian": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.atlassian.com/v1/sse"
            ],
            "enabled": true
        },
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true,
            "headers": {
                "CONTEXT7_API_KEY": "{file:~/.secrets/context7}"
            }
        }
    }
}
